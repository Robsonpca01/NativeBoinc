<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:orientation="vertical" >
	    <LinearLayout
	        android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="3dip">
	        <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/labelTextSize"
				android:text="@string/timePrefEveryDay" />
	        <Button android:id="@+id/everyDayStart"
	            android:layout_width="@dimen/timeButtonSize"
				android:layout_height="wrap_content"
				android:gravity="center" />
	        <Button android:id="@+id/everyDayEnd"
	            android:layout_width="@dimen/timeButtonSize"
	            android:layout_height="wrap_content"
				android:gravity="center" />
	    </LinearLayout>
	    
	    <TableLayout 
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="3dip" >
	        <TableRow
	            android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<CheckBox android:id="@+id/mondayEnable"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="true" />
	            <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/labelTextSize"
					android:gravity="right"
					android:text="@string/monday" />
		        <Button android:id="@+id/mondayStart"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
		        <Button android:id="@+id/mondayEnd"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
		        <CheckBox android:id="@+id/tuesdayEnable"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="true" />
		        <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/labelTextSize"
					android:gravity="right"
					android:text="@string/tuesday" />
		        <Button android:id="@+id/tuesdayStart"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
		        <Button android:id="@+id/tuesdayEnd"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
	        </TableRow>
	        
	        <TableRow
	            android:layout_width="fill_parent"
				android:layout_height="wrap_content">
		        <CheckBox android:id="@+id/wednesdayEnable"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="true" />
	            <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/labelTextSize"
					android:gravity="right"
					android:text="@string/wednesday" />
		        <Button android:id="@+id/wednesdayStart"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
		        <Button android:id="@+id/wednesdayEnd"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
		        <CheckBox android:id="@+id/thursdayEnable"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="true" />
		        <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/labelTextSize"
					android:gravity="right"
					android:text="@string/thursday" />
		        <Button android:id="@+id/thursdayStart"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
		        <Button android:id="@+id/thursdayEnd"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
	        </TableRow>
	        
	        <TableRow
	            android:layout_width="fill_parent"
				android:layout_height="wrap_content">
		        <CheckBox android:id="@+id/fridayEnable"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="true" />
	            <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/labelTextSize"
					android:gravity="right"
					android:text="@string/friday" />
		        <Button android:id="@+id/fridayStart"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
		        <Button android:id="@+id/fridayEnd"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
		        <CheckBox android:id="@+id/saturdayEnable"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="true" />
		        <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/labelTextSize"
					android:gravity="right"
					android:text="@string/saturday" />
		        <Button android:id="@+id/saturdayStart"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
		        <Button android:id="@+id/saturdayEnd"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
	        </TableRow>
	        
	        <TableRow
	            android:layout_width="fill_parent"
				android:layout_height="wrap_content">
		        <CheckBox android:id="@+id/sundayEnable"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="true" />
	            <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/labelTextSize"
					android:gravity="right"
					android:text="@string/sunday" />
		        <Button android:id="@+id/sundayStart"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
		        <Button android:id="@+id/sundayEnd"
		            android:layout_width="@dimen/timeButtonSize"
		            android:layout_height="wrap_content"
					android:gravity="center" />
	        </TableRow>
	    </TableLayout>
    </LinearLayout>
</ScrollView>