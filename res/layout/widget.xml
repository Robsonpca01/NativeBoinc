<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="vertical"
  	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/widget_bg">
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_gravity="center_horizontal"
		android:layout_height="wrap_content"
		android:paddingBottom="3dip">
		<Button
			android:id="@+id/widgetStart" 
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="1dip"
			android:drawableRight="@android:drawable/ic_media_play" />
		<Button
			android:id="@+id/widgetStop" 
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="1dip"
			android:drawableRight="@android:drawable/ic_media_pause" />
		<Button
			android:id="@+id/widgetManager" 
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="1dip"
			android:drawableRight="@drawable/nativeboinc_alpha" />
		<Button
			android:id="@+id/widgetLock"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="1dip"
			android:drawableRight="@android:drawable/ic_lock_lock" />
	</LinearLayout>
	<RelativeLayout	android:id="@+id/widgetProgress"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<ProgressBar
			android:id="@+id/widgetProgressRunning"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:progressDrawable="@drawable/progress_green"
			android:visibility="visible"
			android:max="100"
			android:progress="10"
			android:secondaryProgress="100" />
		<TextView
			android:id="@+id/widgetProgressText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerInParent="true"
			android:lines="1"
			android:textAppearance="?android:attr/textAppearanceSmallInverse" />
	</RelativeLayout>
</LinearLayout>
